{% extends 'admin/layout.html.twig' %}

{% block title %}Modifier le paiement #{{ payment.id }} - Phoenix Security{% endblock %}

{% block page_title %}
    <i class="bi bi-pencil me-2"></i>Modifier le Paiement
{% endblock %}

{% block page_subtitle %}
    {{ payment.agent.firstName }} {{ payment.agent.lastName }} - Période {{ payment.period }}
{% endblock %}

{% block content %}
<div class="row mb-4">
    <div class="col-12">
        <a href="{{ path('admin_payments') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Retour aux paiements
        </a>
    </div>
</div>

<div class="row g-4">
    <!-- Formulaire -->
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pt-4">
                <h6 class="mb-0"><i class="bi bi-receipt me-2 text-primary"></i>Informations du paiement</h6>
            </div>
            <div class="card-body">
                <form method="post" action="{{ path('admin_payment_update', {id: payment.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('payment_edit' ~ payment.id) }}">
                    
                    <div class="row g-3">
                        <!-- Agent -->
                        <div class="col-md-6">
                            <label class="form-label">Agent</label>
                            <select name="agent_id" class="form-select" required>
                                {% for agent in agents %}
                                    <option value="{{ agent.id }}" {{ payment.agent.id == agent.id ? 'selected' : '' }}>
                                        {{ agent.firstName }} {{ agent.lastName }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <!-- Période -->
                        <div class="col-md-6">
                            <label class="form-label">Période</label>
                            <input type="month" name="period" class="form-control" 
                                   value="{{ payment.period }}" required>
                        </div>
                        
                        <!-- Heures de jour -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="bi bi-sun text-warning me-1"></i>Heures de jour
                            </label>
                            <input type="number" name="hours_day" class="form-control" 
                                   value="{{ payment.totalHoursDay }}" step="0.5" min="0" required
                                   onchange="calculateAmount()">
                        </div>
                        
                        <!-- Heures de nuit -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="bi bi-moon text-primary me-1"></i>Heures de nuit
                            </label>
                            <input type="number" name="hours_night" class="form-control" 
                                   value="{{ payment.totalHoursNight }}" step="0.5" min="0" required
                                   onchange="calculateAmount()">
                        </div>
                        
                        <!-- Montant -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="bi bi-currency-euro text-success me-1"></i>Montant (€)
                            </label>
                            <div class="input-group">
                                <input type="number" name="amount" id="amount" class="form-control" 
                                       value="{{ payment.totalAmount }}" step="0.01" min="0" required>
                                <span class="input-group-text">€</span>
                            </div>
                        </div>
                        
                        <!-- Date de paiement -->
                        <div class="col-md-6">
                            <label class="form-label">
                                <i class="bi bi-calendar-check text-info me-1"></i>Date de paiement
                            </label>
                            <input type="date" name="payment_date" class="form-control" 
                                   value="{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d') : '' }}">
                            <small class="text-muted">Laisser vide si non payé</small>
                        </div>
                        
                        <!-- Boutons -->
                        <div class="col-12">
                            <hr class="my-3">
                            <div class="d-flex justify-content-between">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-phoenix">
                                        <i class="bi bi-check-lg me-2"></i>Enregistrer
                                    </button>
                                    <a href="{{ path('admin_payments') }}" class="btn btn-light">
                                        <i class="bi bi-x-lg me-2"></i>Annuler
                                    </a>
                                </div>
                                <button type="button" class="btn btn-outline-danger" 
                                        data-bs-toggle="modal" data-bs-target="#deleteModal">
                                    <i class="bi bi-trash me-2"></i>Supprimer
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        
        <!-- Calcul automatique -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-transparent border-0 pt-4">
                <h6 class="mb-0"><i class="bi bi-calculator me-2 text-primary"></i>Calcul automatique</h6>
            </div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-4">
                        <label class="form-label">Taux horaire jour (€)</label>
                        <input type="number" id="rate_day" class="form-control" value="15" step="0.5" onchange="calculateAmount()">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Taux horaire nuit (€)</label>
                        <input type="number" id="rate_night" class="form-control" value="18" step="0.5" onchange="calculateAmount()">
                    </div>
                    <div class="col-md-4 text-end">
                        <button type="button" class="btn btn-outline-primary mt-4" onclick="calculateAmount()">
                            <i class="bi bi-calculator me-2"></i>Calculer
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Sidebar Agent -->
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-transparent border-0 pt-4">
                <h6 class="mb-0"><i class="bi bi-person-badge me-2 text-primary"></i>Agent actuel</h6>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="avatar-xl mx-auto mb-3" style="width: 80px; height: 80px; font-size: 28px; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, var(--phoenix-primary), #ff8c42); color: white; border-radius: 50%;">
                        {{ payment.agent.firstName|slice(0, 1)|upper }}{{ payment.agent.lastName|slice(0, 1)|upper }}
                    </div>
                    <h5 class="mb-1">{{ payment.agent.firstName }} {{ payment.agent.lastName }}</h5>
                    <span class="badge {{ payment.agent.status == 'ACTIF' ? 'bg-success' : 'bg-secondary' }}">
                        {{ payment.agent.status }}
                    </span>
                </div>
                
                <ul class="list-unstyled">
                    {% if payment.agent.phone %}
                        <li class="d-flex align-items-center py-2 border-bottom">
                            <i class="bi bi-telephone text-muted me-3"></i>
                            <span>{{ payment.agent.phone }}</span>
                        </li>
                    {% endif %}
                    <li class="d-flex align-items-center py-2 border-bottom">
                        <i class="bi bi-currency-euro text-muted me-3"></i>
                        <span>Taux: <strong>{{ payment.agent.hourlyRate|number_format(2, ',', ' ') }}€/h</strong></span>
                    </li>
                    {% if payment.agent.hireDate %}
                        <li class="d-flex align-items-center py-2">
                            <i class="bi bi-calendar-check text-muted me-3"></i>
                            <span>Depuis {{ payment.agent.hireDate|date('d/m/Y') }}</span>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
        
        <!-- Résumé -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-transparent border-0 pt-4">
                <h6 class="mb-0"><i class="bi bi-info-circle me-2 text-primary"></i>Résumé</h6>
            </div>
            <div class="card-body">
                <ul class="list-unstyled mb-0">
                    <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted">ID Paiement</span>
                        <strong>#{{ payment.id }}</strong>
                    </li>
                    <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted">Période</span>
                        <strong>{{ payment.period }}</strong>
                    </li>
                    <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted">Statut</span>
                        {% if payment.paymentDate %}
                            <span class="badge bg-success">Payé</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">En attente</span>
                        {% endif %}
                    </li>
                    <li class="d-flex justify-content-between py-2">
                        <span class="text-muted">Montant actuel</span>
                        <strong class="text-success">{{ payment.totalAmount|number_format(2, ',', ' ') }} €</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Modal Suppression -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header border-0">
                <h5 class="modal-title text-danger">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir supprimer ce paiement ?</p>
                <p class="mb-0 text-muted small">Cette action est irréversible.</p>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Annuler</button>
                <form action="{{ path('app_payment_delete', {id: payment.id}) }}" method="post" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function calculateAmount() {
    const hoursDay = parseFloat(document.querySelector('[name="hours_day"]').value) || 0;
    const hoursNight = parseFloat(document.querySelector('[name="hours_night"]').value) || 0;
    const rateDay = parseFloat(document.getElementById('rate_day').value) || 15;
    const rateNight = parseFloat(document.getElementById('rate_night').value) || 18;
    
    const total = (hoursDay * rateDay) + (hoursNight * rateNight);
    document.getElementById('amount').value = total.toFixed(2);
}
</script>
{% endblock %}
