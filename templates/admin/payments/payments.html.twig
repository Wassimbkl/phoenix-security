{% extends 'admin/layout.html.twig' %}

{% block title %}Paiements - Phoenix Security{% endblock %}

{% block page_title %}Gestion des Paiements{% endblock %}
{% block page_subtitle %}Calcul et suivi des salaires{% endblock %}

{% block content %}
<!-- Stats -->
<div class="row g-4 mb-4">
    <div class="col-6 col-lg-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.count }}</div>
                    <div class="stat-card-label">Paiements</div>
                </div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-receipt"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.total_hours|number_format(1) }}h</div>
                    <div class="stat-card-label">Heures totales</div>
                </div>
                <div class="stat-card-icon info">
                    <i class="bi bi-clock"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.total_amount|number_format(2, ',', ' ') }}€</div>
                    <div class="stat-card-label">Montant total</div>
                </div>
                <div class="stat-card-icon success">
                    <i class="bi bi-currency-euro"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters & Actions -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-12 col-md-3">
                <label class="form-label small text-muted">Période</label>
                <input type="month" id="periodFilter" class="form-control" value="{{ currentPeriod }}">
            </div>
            <div class="col-12 col-md-3">
                <label class="form-label small text-muted">Agent</label>
                <select id="agentFilter" class="form-select">
                    <option value="">Tous les agents</option>
                    {% for agent in agents %}
                        <option value="{{ agent.id }}" {{ currentAgent == agent.id ? 'selected' : '' }}>
                            {{ agent.firstName }} {{ agent.lastName }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            <div class="col-6 col-md-2">
                <button type="button" id="filterBtn" class="btn btn-outline-phoenix w-100">
                    <i class="bi bi-funnel me-1"></i>Filtrer
                </button>
            </div>
            <div class="col-6 col-md-4 text-end">
                <button type="button" id="generateBtn" class="btn btn-phoenix">
                    <i class="bi bi-calculator me-2"></i>Générer paiements
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Formulaire caché pour générer les paiements -->
<form id="generateForm" method="post" action="{{ path('admin_payments_generate') }}" style="display: none;">
    <input type="hidden" name="period" id="generatePeriod" value="{{ currentPeriod }}">
</form>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Filtrer
    document.getElementById('filterBtn').addEventListener('click', function() {
        const period = document.getElementById('periodFilter').value;
        const agent = document.getElementById('agentFilter').value;
        
        let url = '{{ path('admin_payments') }}?';
        if (period) url += 'period=' + period + '&';
        if (agent) url += 'agent=' + agent;
        
        window.location.href = url;
    });
    
    // Générer paiements
    document.getElementById('generateBtn').addEventListener('click', function() {
        const period = document.getElementById('periodFilter').value;
        document.getElementById('generatePeriod').value = period;
        
        if (confirm('Générer les paiements pour ' + period + ' ?')) {
            document.getElementById('generateForm').submit();
        }
    });
});
</script>

<!-- Payments List -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-list-ul me-2"></i>Liste des paiements</span>
        <span class="badge bg-primary">{{ payments|length }} résultat(s)</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Agent</th>
                        <th>Période</th>
                        <th>Heures Jour</th>
                        <th>Heures Nuit</th>
                        <th>Total Heures</th>
                        <th>Montant</th>
                        <th>Date paiement</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center gap-2">
                                    <div class="avatar" style="background: var(--phoenix-primary); color: white;">
                                        {{ payment.agent.firstName|first }}{{ payment.agent.lastName|first }}
                                    </div>
                                    <div>
                                        <div class="fw-medium">{{ payment.agent.firstName }} {{ payment.agent.lastName }}</div>
                                        <small class="text-muted">{{ payment.agent.hourlyRate }}€/h</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark">
                                    {{ payment.period }}
                                </span>
                            </td>
                            <td>{{ payment.totalHoursDay|number_format(1) }}h</td>
                            <td>
                                {% if payment.totalHoursNight > 0 %}
                                    <span class="text-warning">
                                        <i class="bi bi-moon me-1"></i>{{ payment.totalHoursNight|number_format(1) }}h
                                    </span>
                                {% else %}
                                    <span class="text-muted">0h</span>
                                {% endif %}
                            </td>
                            <td>
                                <strong>{{ (payment.totalHoursDay + payment.totalHoursNight)|number_format(1) }}h</strong>
                            </td>
                            <td>
                                <strong class="text-success fs-5">{{ payment.totalAmount|number_format(2, ',', ' ') }}€</strong>
                            </td>
                            <td>
                                {% if payment.paymentDate %}
                                    <span class="badge-status effectue">
                                        <i class="bi bi-check-circle me-1"></i>
                                        {{ payment.paymentDate|date('d/m/Y') }}
                                    </span>
                                {% else %}
                                    <span class="badge-status prevu">
                                        <i class="bi bi-clock me-1"></i>En attente
                                    </span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <a href="{{ path('app_payment_show', {id: payment.id}) }}" class="btn btn-sm btn-outline-primary" title="Voir">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_payment_edit', {id: payment.id}) }}" class="btn btn-sm btn-outline-secondary" title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="bi bi-inbox fs-1 text-muted"></i>
                                <p class="mt-3 mb-2">Aucun paiement pour cette période</p>
                                <p class="text-muted small">Cliquez sur "Générer paiements" pour calculer les salaires</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Info Card -->
<div class="card mt-4">
    <div class="card-body">
        <h6><i class="bi bi-info-circle text-info me-2"></i>Comment sont calculés les paiements ?</h6>
        <ul class="mb-0 small text-muted">
            <li>Les heures de <strong>jour</strong> sont comptabilisées au taux horaire normal de l'agent</li>
            <li>Les heures de <strong>nuit</strong> bénéficient d'une majoration de <strong>25%</strong></li>
            <li>Seuls les shifts avec le statut <strong>"Effectué"</strong> sont pris en compte</li>
            <li>La génération recalcule les montants pour tous les agents actifs de la période</li>
        </ul>
    </div>
</div>
{% endblock %}
