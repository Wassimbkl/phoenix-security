{% extends 'admin/layout.html.twig' %}

{% block title %}Rapport par Site - Phoenix Security{% endblock %}

{% block page_title %}
    <i class="bi bi-building me-2"></i>Rapport par Site
{% endblock %}

{% block page_subtitle %}
    {% set monthNames = ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'] %}
    {% set periodParts = period|split('-') %}
    {{ monthNames[periodParts[1]|number_format - 1] }} {{ periodParts[0] }}
{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <a href="{{ path('admin_reports') }}" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-2"></i>Retour aux rapports
    </a>
    <div class="d-flex gap-2">
        <form method="get" class="d-flex gap-2">
            <input type="month" name="period" class="form-control" value="{{ period }}" onchange="this.form.submit()">
        </form>
        <button onclick="window.print()" class="btn btn-phoenix">
            <i class="bi bi-printer me-2"></i>Imprimer
        </button>
    </div>
</div>

<!-- Stats globales -->
{% set totalHours = 0 %}
{% set totalCost = 0 %}
{% set totalShifts = 0 %}
{% for data in sitesData %}
    {% set totalHours = totalHours + data.total_hours %}
    {% set totalCost = totalCost + data.total_cost %}
    {% set totalShifts = totalShifts + data.shifts_completed %}
{% endfor %}

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ sitesData|length }}</div>
                    <div class="stat-card-label">Sites actifs</div>
                </div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-building"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ totalHours|number_format(0) }}h</div>
                    <div class="stat-card-label">Heures totales</div>
                </div>
                <div class="stat-card-icon info">
                    <i class="bi bi-clock"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ totalCost|number_format(0, ',', ' ') }}€</div>
                    <div class="stat-card-label">Coût total</div>
                </div>
                <div class="stat-card-icon success">
                    <i class="bi bi-currency-euro"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tableau des sites -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-table me-2"></i>Détail par site</span>
        <span class="badge bg-primary">{{ sitesData|length }} site(s)</span>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Site</th>
                        <th class="text-center">Agents</th>
                        <th class="text-center">Shifts</th>
                        <th class="text-center">Heures Jour</th>
                        <th class="text-center">Heures Nuit</th>
                        <th class="text-center">Total Heures</th>
                        <th class="text-end">Coût</th>
                    </tr>
                </thead>
                <tbody>
                    {% for data in sitesData %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                                        <i class="bi bi-building text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">{{ data.site.name }}</div>
                                        <small class="text-muted">{{ data.site.address|slice(0, 40) }}{% if data.site.address|length > 40 %}...{% endif %}</small>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center align-middle">
                                <span class="badge bg-secondary">{{ data.agents_count }}</span>
                            </td>
                            <td class="text-center align-middle">
                                <span class="fw-semibold">{{ data.shifts_completed }}</span>
                                <span class="text-muted">/{{ data.shifts_total }}</span>
                            </td>
                            <td class="text-center align-middle">
                                <i class="bi bi-sun text-warning me-1"></i>
                                {{ data.hours_day|number_format(1) }}h
                            </td>
                            <td class="text-center align-middle">
                                <i class="bi bi-moon text-dark me-1"></i>
                                {{ data.hours_night|number_format(1) }}h
                            </td>
                            <td class="text-center align-middle">
                                <strong>{{ data.total_hours|number_format(1) }}h</strong>
                            </td>
                            <td class="text-end align-middle">
                                <strong class="text-success">{{ data.total_cost|number_format(2, ',', ' ') }}€</strong>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1"></i>
                                <p class="mt-3 mb-0">Aucune donnée pour cette période</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                {% if sitesData|length > 0 %}
                <tfoot class="table-light">
                    <tr>
                        <td><strong>TOTAL</strong></td>
                        <td class="text-center">-</td>
                        <td class="text-center"><strong>{{ totalShifts }}</strong></td>
                        <td class="text-center">
                            {% set dayHours = 0 %}
                            {% for data in sitesData %}{% set dayHours = dayHours + data.hours_day %}{% endfor %}
                            <strong>{{ dayHours|number_format(1) }}h</strong>
                        </td>
                        <td class="text-center">
                            {% set nightHours = 0 %}
                            {% for data in sitesData %}{% set nightHours = nightHours + data.hours_night %}{% endfor %}
                            <strong>{{ nightHours|number_format(1) }}h</strong>
                        </td>
                        <td class="text-center"><strong>{{ totalHours|number_format(1) }}h</strong></td>
                        <td class="text-end"><strong class="fs-5 text-success">{{ totalCost|number_format(2, ',', ' ') }}€</strong></td>
                    </tr>
                </tfoot>
                {% endif %}
            </table>
        </div>
    </div>
</div>

<!-- Graphique visuel -->
{% if sitesData|length > 0 %}
<div class="card mt-4">
    <div class="card-header">
        <i class="bi bi-bar-chart me-2"></i>Répartition des coûts par site
    </div>
    <div class="card-body">
        {% for data in sitesData %}
            {% set percentage = totalCost > 0 ? (data.total_cost / totalCost * 100) : 0 %}
            <div class="mb-3">
                <div class="d-flex justify-content-between mb-1">
                    <span class="fw-medium">{{ data.site.name }}</span>
                    <span class="text-muted">{{ data.total_cost|number_format(2, ',', ' ') }}€ ({{ percentage|number_format(1) }}%)</span>
                </div>
                <div class="progress" style="height: 20px;">
                    <div class="progress-bar bg-primary" role="progressbar" style="width: {{ percentage }}%"></div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endif %}

<style>
    @media print {
        .btn, .form-control, nav, .sidebar, header {
            display: none !important;
        }
        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }
        body {
            padding: 0 !important;
        }
        .main-content {
            margin-left: 0 !important;
            padding: 20px !important;
        }
    }
</style>
{% endblock %}
