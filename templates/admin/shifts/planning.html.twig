{% extends 'admin/layout.html.twig' %}

{% block title %}Planning - Phoenix Security{% endblock %}

{% block page_title %}Planning{% endblock %}
{% block page_subtitle %}Gestion des shifts et du calendrier{% endblock %}

{% block content %}
<!-- Controls -->
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex flex-wrap gap-3 align-items-center justify-content-between">
            <!-- Navigation & Vue -->
            <div class="d-flex align-items-center gap-2">
                {% if view == 'week' %}
                    {% set prevDate = currentDate|date_modify('-1 week')|date('Y-m-d') %}
                    {% set nextDate = currentDate|date_modify('+1 week')|date('Y-m-d') %}
                {% else %}
                    {% set prevDate = currentDate|date_modify('-1 month')|date('Y-m-d') %}
                    {% set nextDate = currentDate|date_modify('+1 month')|date('Y-m-d') %}
                {% endif %}
                
                <button class="btn btn-outline-secondary btn-sm"
                        hx-get="{{ path('admin_planning_calendar', {view: view, date: prevDate}) }}"
                        hx-target="#calendar-container">
                    <i class="bi bi-chevron-left"></i>
                </button>
                
                <input type="month" 
                       id="monthPicker" 
                       class="form-control form-control-sm" 
                       value="{{ currentDate|date('Y-m') }}"
                       style="width: 160px;">
                
                <button class="btn btn-outline-secondary btn-sm"
                        hx-get="{{ path('admin_planning_calendar', {view: view, date: nextDate}) }}"
                        hx-target="#calendar-container">
                    <i class="bi bi-chevron-right"></i>
                </button>
                
                <button class="btn btn-outline-secondary btn-sm"
                        hx-get="{{ path('admin_planning_calendar', {view: view, date: 'now'|date('Y-m-d')}) }}"
                        hx-target="#calendar-container">
                    Aujourd'hui
                </button>
            </div>
            
            <!-- Vue Semaine/Mois -->
            <div class="btn-group btn-group-sm" role="group">
                <a href="{{ path('admin_planning', {view: 'week', date: currentDate|date('Y-m-d')}) }}" 
                   class="btn {{ view == 'week' ? 'btn-phoenix' : 'btn-outline-phoenix' }}">
                    <i class="bi bi-calendar-week me-1"></i>Semaine
                </a>
                <a href="{{ path('admin_planning', {view: 'month', date: currentDate|date('Y-m-d')}) }}" 
                   class="btn {{ view == 'month' ? 'btn-phoenix' : 'btn-outline-phoenix' }}">
                    <i class="bi bi-calendar-month me-1"></i>Mois
                </a>
            </div>
            
            <!-- Nouveau shift -->
            <a href="{{ path('admin_shift_new') }}" class="btn btn-phoenix btn-sm">
                <i class="bi bi-plus-lg me-1"></i>Nouveau shift
            </a>
        </div>
    </div>
</div>

<!-- Calendar -->
<div class="card">
    <div class="card-body p-0" id="calendar-container">
        {% include 'admin/shifts/_planning_calendar.html.twig' %}
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const monthPicker = document.getElementById('monthPicker');
    const currentView = '{{ view }}';
    
    // Changement direct du mois
    monthPicker.addEventListener('change', function() {
        const selectedMonth = monthPicker.value;
        if (selectedMonth) {
            const date = selectedMonth + '-01';
            window.location.href = '{{ path('admin_planning') }}?view=' + currentView + '&date=' + date;
        }
    });
});
</script>
{% endblock %}
