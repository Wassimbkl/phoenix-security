{% extends 'admin/layout.html.twig' %}

{% block title %}Utilisateurs - Phoenix Security{% endblock %}

{% block page_title %}Gestion des Utilisateurs{% endblock %}
{% block page_subtitle %}{{ users|length }} utilisateurs enregistrés{% endblock %}

{% block content %}
<!-- Stats Cards -->
<div class="row g-4 mb-4">
    <div class="col-6 col-lg-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ users|length }}</div>
                    <div class="stat-card-label">Total Utilisateurs</div>
                </div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-people"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ users|filter(user => user.role == 'ADMIN')|length }}</div>
                    <div class="stat-card-label">Administrateurs</div>
                </div>
                <div class="stat-card-icon danger">
                    <i class="bi bi-shield-check"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-lg-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ users|filter(user => user.role == 'AGENT')|length }}</div>
                    <div class="stat-card-label">Agents</div>
                </div>
                <div class="stat-card-icon info">
                    <i class="bi bi-person-badge"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Actions -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div class="search-box" style="width: 300px;">
        <i class="bi bi-search"></i>
        <input type="text" class="form-control" placeholder="Rechercher un utilisateur..." id="searchUser">
    </div>
    <a href="{{ path('app_agent_new') }}" class="btn btn-phoenix">
        <i class="bi bi-plus-lg me-2"></i>Nouvel utilisateur
    </a>
</div>

<!-- Users List -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-modern mb-0">
                <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Email</th>
                        <th>Rôle</th>
                        <th>Date création</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody id="users-table">
                    {% for user in users %}
                        <tr class="user-row" data-email="{{ user.email|lower }}">
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="avatar {{ user.role == 'ADMIN' ? 'bg-danger' : 'bg-primary' }}" style="color: white;">
                                        {{ user.email|first|upper }}
                                    </div>
                                    <div>
                                        <div class="fw-semibold">{{ user.email|split('@')[0]|capitalize }}</div>
                                        <small class="text-muted">ID: {{ user.id }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <i class="bi bi-envelope text-muted me-1"></i>
                                {{ user.email }}
                            </td>
                            <td>
                                {% if user.role == 'ADMIN' %}
                                    <span class="badge bg-danger bg-opacity-10 text-danger">
                                        <i class="bi bi-shield-check me-1"></i>Administrateur
                                    </span>
                                {% else %}
                                    <span class="badge bg-primary bg-opacity-10 text-primary">
                                        <i class="bi bi-person me-1"></i>Agent
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <i class="bi bi-calendar text-muted me-1"></i>
                                {{ user.createdAt|date('d/m/Y H:i') }}
                            </td>
                            <td class="text-end">
                                <div class="btn-group">
                                    <button class="btn btn-sm btn-outline-primary" title="Modifier"
                                            data-bs-toggle="modal" data-bs-target="#editUserModal{{ user.id }}">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    {% if user.role != 'ADMIN' %}
                                        <button class="btn btn-sm btn-outline-danger" title="Supprimer"
                                                data-bs-toggle="modal" data-bs-target="#deleteUserModal{{ user.id }}">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    {% endif %}
                                </div>

                                <!-- Modal Modifier -->
                                <div class="modal fade" id="editUserModal{{ user.id }}" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header border-0">
                                                <h5 class="modal-title"><i class="bi bi-pencil text-primary me-2"></i>Modifier l'utilisateur</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form action="{{ path('admin_user_edit', {id: user.id}) }}" method="post">
                                                <div class="modal-body">
                                                    <div class="mb-3">
                                                        <label class="form-label">Email</label>
                                                        <input type="email" name="email" class="form-control" value="{{ user.email }}" required>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Rôle</label>
                                                        <select name="role" class="form-select">
                                                            <option value="AGENT" {{ user.role == 'AGENT' ? 'selected' : '' }}>Agent</option>
                                                            <option value="ADMIN" {{ user.role == 'ADMIN' ? 'selected' : '' }}>Administrateur</option>
                                                        </select>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="form-label">Nouveau mot de passe <small class="text-muted">(laisser vide pour ne pas changer)</small></label>
                                                        <input type="password" name="password" class="form-control" placeholder="••••••••">
                                                    </div>
                                                </div>
                                                <div class="modal-footer border-0">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="bi bi-check-lg me-2"></i>Enregistrer
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                                {% if user.role != 'ADMIN' %}
                                <!-- Modal Supprimer -->
                                <div class="modal fade" id="deleteUserModal{{ user.id }}" tabindex="-1">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header border-0">
                                                <h5 class="modal-title"><i class="bi bi-exclamation-triangle text-danger me-2"></i>Confirmer la suppression</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Êtes-vous sûr de vouloir supprimer cet utilisateur ?</p>
                                                <div class="bg-danger bg-opacity-10 rounded-3 p-3">
                                                    <strong>{{ user.email }}</strong><br>
                                                    <small class="text-muted">Rôle: {{ user.role }}</small>
                                                </div>
                                                <p class="text-danger small mt-3 mb-0">
                                                    <i class="bi bi-exclamation-circle me-1"></i>Cette action est irréversible.
                                                </p>
                                            </div>
                                            <div class="modal-footer border-0">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                <form action="{{ path('admin_user_delete', {id: user.id}) }}" method="post" class="d-inline">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-trash me-2"></i>Supprimer
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5">
                                <i class="bi bi-people fs-1 text-muted"></i>
                                <p class="mt-3 mb-0">Aucun utilisateur enregistré</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Info -->
<div class="card mt-4">
    <div class="card-body">
        <h6><i class="bi bi-info-circle text-info me-2"></i>À propos des utilisateurs</h6>
        <ul class="mb-0 small text-muted">
            <li>Les <strong>Administrateurs</strong> ont accès à toutes les fonctionnalités de gestion</li>
            <li>Les <strong>Agents</strong> peuvent uniquement consulter leur propre planning et paiements</li>
            <li>Un compte agent est automatiquement créé lors de l'ajout d'un nouvel agent</li>
            <li>Le mot de passe par défaut est <code>0000</code> - l'agent devra le changer</li>
        </ul>
    </div>
</div>

<script>
document.getElementById('searchUser').addEventListener('input', function(e) {
    const search = e.target.value.toLowerCase();
    document.querySelectorAll('.user-row').forEach(row => {
        const email = row.dataset.email;
        row.style.display = email.includes(search) ? '' : 'none';
    });
});
</script>
{% endblock %}