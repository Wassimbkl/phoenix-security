{% extends 'base.html.twig' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <h1>Agent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ agent.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ agent.lastName }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ agent.phone }}</td>
            </tr>
            <tr>
                <th>HourlyRate</th>
                <td>{{ agent.hourlyRate }}</td>
            </tr>
            <tr>
                <th>HireDate</th>
                <td>{{ agent.hireDate ? agent.hireDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ agent.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_agent_index') }}">back to list</a>

    <a href="{{ path('app_agent_edit', {'id': agent.id}) }}">edit</a>

    {{ include('agent/_delete_form.html.twig') }}
{% endblock %}
