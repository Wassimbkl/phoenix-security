{% extends 'agent_dashboard/layout.html.twig' %}

{% block title %}Mon espace - Phoenix Security{% endblock %}

{% block page_title %}Bienvenue, {{ agent.firstName }}{% endblock %}
{% block page_subtitle %}Votre tableau de bord{% endblock %}

{% block content %}
<!-- Stats -->
<div class="row g-4 mb-4">
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.total_shifts }}</div>
                    <div class="stat-card-label">Shifts ce mois</div>
                </div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-calendar-check"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.completed_shifts }}</div>
                    <div class="stat-card-label">Effectués</div>
                </div>
                <div class="stat-card-icon success">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.total_hours|number_format(1) }}h</div>
                    <div class="stat-card-label">Heures travaillées</div>
                </div>
                <div class="stat-card-icon info">
                    <i class="bi bi-clock"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ stats.hours_night|number_format(1) }}h</div>
                    <div class="stat-card-label">Heures de nuit</div>
                </div>
                <div class="stat-card-icon warning">
                    <i class="bi bi-moon-stars"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Prochains shifts -->
    <div class="col-12 col-lg-8">
        <div class="card h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span><i class="bi bi-calendar-event text-primary me-2"></i>Prochains shifts</span>
                <a href="{{ path('agent_planning') }}" class="btn btn-sm btn-outline-phoenix">Voir le planning</a>
            </div>
            <div class="card-body p-0">
                {% if upcomingShifts|length > 0 %}
                    <div class="list-group list-group-flush">
                        {% for shift in upcomingShifts %}
                            <div class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <div class="d-flex align-items-center gap-3">
                                    <div class="text-center" style="min-width: 50px;">
                                        <div class="fs-4 fw-bold text-primary">{{ shift.shiftDate|date('d') }}</div>
                                        <small class="text-muted">{{ shift.shiftDate|date('M') }}</small>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">
                                            <i class="bi bi-clock me-1 text-muted"></i>
                                            {{ shift.startTime|date('H:i') }} - {{ shift.endTime|date('H:i') }}
                                        </div>
                                        <div class="small text-muted">
                                            <i class="bi bi-geo-alt me-1"></i>{{ shift.site.name }}
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge {{ shift.type == 'NUIT' ? 'bg-dark' : 'bg-primary' }}">
                                        {{ shift.type }}
                                    </span>
                                    <span class="badge-status {{ shift.status|lower }}">
                                        {{ shift.status }}
                                    </span>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-calendar-x fs-1"></i>
                        <p class="mt-2 mb-0">Aucun shift planifié</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    
    <!-- Infos agent -->
    <div class="col-12 col-lg-4">
        <div class="card h-100">
            <div class="card-header">
                <i class="bi bi-person-badge text-primary me-2"></i>Mon profil
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="avatar avatar-lg mx-auto mb-3" style="width: 80px; height: 80px; font-size: 2rem; background: var(--phoenix-primary); color: white;">
                        {{ agent.firstName|first|upper }}{{ agent.lastName|first|upper }}
                    </div>
                    <h5 class="mb-1">{{ agent.firstName }} {{ agent.lastName }}</h5>
                    <span class="badge-status {{ agent.status|lower }}">{{ agent.status }}</span>
                </div>
                
                <ul class="list-unstyled mb-0">
                    <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted"><i class="bi bi-building me-2"></i>Site</span>
                        <strong>{{ agent.site ? agent.site.name : 'Non assigné' }}</strong>
                    </li>
                    <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted"><i class="bi bi-telephone me-2"></i>Téléphone</span>
                        <strong>{{ agent.phone ?? 'Non renseigné' }}</strong>
                    </li>
                    <li class="d-flex justify-content-between py-2 border-bottom">
                        <span class="text-muted"><i class="bi bi-currency-euro me-2"></i>Taux horaire</span>
                        <strong class="text-success">{{ agent.hourlyRate }}€/h</strong>
                    </li>
                    <li class="d-flex justify-content-between py-2">
                        <span class="text-muted"><i class="bi bi-calendar me-2"></i>Depuis</span>
                        <strong>{{ agent.hireDate ? agent.hireDate|date('d/m/Y') : 'N/A' }}</strong>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
{% endblock %}
