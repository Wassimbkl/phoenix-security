{% extends 'agent_dashboard/layout.html.twig' %}

{% block title %}Mes paiements - Phoenix Security{% endblock %}

{% block page_title %}Mes paiements{% endblock %}
{% block page_subtitle %}Historique de vos fiches de paie{% endblock %}

{% block content %}
<!-- Résumé -->
<div class="row g-4 mb-4">
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value text-success">{{ totalAmount|number_format(2, ',', ' ') }}€</div>
                    <div class="stat-card-label">Total perçu</div>
                </div>
                <div class="stat-card-icon success">
                    <i class="bi bi-cash-stack"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ totalHours|number_format(1) }}h</div>
                    <div class="stat-card-label">Heures totales</div>
                </div>
                <div class="stat-card-icon warning">
                    <i class="bi bi-clock-history"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ payments|length }}</div>
                    <div class="stat-card-label">Fiches de paie</div>
                </div>
                <div class="stat-card-icon primary">
                    <i class="bi bi-file-earmark-text"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-6 col-lg-3">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-card-value">{{ agent.hourlyRate }}€</div>
                    <div class="stat-card-label">Taux horaire</div>
                </div>
                <div class="stat-card-icon info">
                    <i class="bi bi-currency-euro"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Liste des paiements -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-wallet2 text-primary me-2"></i>Historique des paiements</span>
    </div>
    <div class="card-body p-0">
        {% if payments|length > 0 %}
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th>Période</th>
                            <th class="text-center">Heures jour</th>
                            <th class="text-center">Heures nuit</th>
                            <th class="text-end">Montant total</th>
                            <th class="text-center">Date paiement</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for payment in payments %}
                            {% set periodParts = payment.period|split('-') %}
                            {% set months = ['', 'Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'] %}
                            <tr>
                                <td>
                                    <div class="fw-semibold">
                                        {{ months[periodParts[1]|number_format(0, '', '')] }} {{ periodParts[0] }}
                                    </div>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-light text-dark">{{ payment.totalHoursDay|number_format(1) }}h</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-dark">{{ payment.totalHoursNight|number_format(1) }}h</span>
                                </td>
                                <td class="text-end">
                                    <strong class="text-success">{{ payment.totalAmount|number_format(2, ',', ' ') }}€</strong>
                                </td>
                                <td class="text-center">
                                    {% if payment.paymentDate %}
                                        <span class="badge-status termine">
                                            <i class="bi bi-check-circle me-1"></i>{{ payment.paymentDate|date('d/m/Y') }}
                                        </span>
                                    {% else %}
                                        <span class="badge-status pending">
                                            <i class="bi bi-hourglass me-1"></i>En attente
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-sm btn-outline-phoenix" 
                                            data-bs-toggle="modal" data-bs-target="#paymentModal{{ payment.id }}">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                </td>
                            </tr>
                            
                            <!-- Modal détails -->
                            <div class="modal fade" id="paymentModal{{ payment.id }}" tabindex="-1">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                <i class="bi bi-file-earmark-text me-2"></i>
                                                Fiche de paie - {{ months[periodParts[1]|number_format(0, '', '')] }} {{ periodParts[0] }}
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="mb-4">
                                                <h6 class="text-muted mb-2">Agent</h6>
                                                <p class="mb-0 fw-semibold">{{ agent.firstName }} {{ agent.lastName }}</p>
                                            </div>
                                            
                                            <div class="mb-4">
                                                <h6 class="text-muted mb-2">Détail des heures</h6>
                                                <ul class="list-unstyled mb-0">
                                                    <li class="d-flex justify-content-between py-2 border-bottom">
                                                        <span>Heures de jour</span>
                                                        <strong>{{ payment.totalHoursDay|number_format(1) }}h × {{ agent.hourlyRate }}€</strong>
                                                    </li>
                                                    <li class="d-flex justify-content-between py-2 border-bottom">
                                                        <span>Heures de nuit (+25%)</span>
                                                        <strong>{{ payment.totalHoursNight|number_format(1) }}h × {{ (agent.hourlyRate * 1.25)|number_format(2) }}€</strong>
                                                    </li>
                                                </ul>
                                            </div>
                                            
                                            <div class="mb-4">
                                                <h6 class="text-muted mb-2">Montant</h6>
                                                <div class="d-flex justify-content-between py-2 bg-light px-3 rounded">
                                                    <strong>Montant total</strong>
                                                    <strong class="text-success fs-5">{{ payment.totalAmount|number_format(2, ',', ' ') }}€</strong>
                                                </div>
                                            </div>
                                            
                                            <div>
                                                <h6 class="text-muted mb-2">Statut</h6>
                                                {% if payment.paymentDate %}
                                                    <div class="alert alert-success mb-0 d-flex align-items-center">
                                                        <i class="bi bi-check-circle-fill me-2"></i>
                                                        <span>Payé le {{ payment.paymentDate|date('d/m/Y') }}</span>
                                                    </div>
                                                {% else %}
                                                    <div class="alert alert-warning mb-0 d-flex align-items-center">
                                                        <i class="bi bi-hourglass me-2"></i>
                                                        <span>En attente de paiement</span>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                                            <button type="button" class="btn btn-phoenix" onclick="window.print()">
                                                <i class="bi bi-printer me-1"></i>Imprimer
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="text-center py-5 text-muted">
                <i class="bi bi-wallet fs-1"></i>
                <p class="mt-2 mb-0">Aucune fiche de paie pour le moment</p>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}
