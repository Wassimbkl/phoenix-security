{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block body %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Period</th>
                <th>TotalHoursDay</th>
                <th>TotalHoursNight</th>
                <th>TotalAmount</th>
                <th>PaymentDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.period }}</td>
                <td>{{ payment.totalHoursDay }}</td>
                <td>{{ payment.totalHoursNight }}</td>
                <td>{{ payment.totalAmount }}</td>
                <td>{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_payment_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
