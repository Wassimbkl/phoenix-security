{% extends 'base.html.twig' %}

{% block title %}Payment{% endblock %}

{% block body %}
    <h1>Payment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ payment.id }}</td>
            </tr>
            <tr>
                <th>Period</th>
                <td>{{ payment.period }}</td>
            </tr>
            <tr>
                <th>TotalHoursDay</th>
                <td>{{ payment.totalHoursDay }}</td>
            </tr>
            <tr>
                <th>TotalHoursNight</th>
                <td>{{ payment.totalHoursNight }}</td>
            </tr>
            <tr>
                <th>TotalAmount</th>
                <td>{{ payment.totalAmount }}</td>
            </tr>
            <tr>
                <th>PaymentDate</th>
                <td>{{ payment.paymentDate ? payment.paymentDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_payment_index') }}">back to list</a>

    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>

    {{ include('payment/_delete_form.html.twig') }}
{% endblock %}
