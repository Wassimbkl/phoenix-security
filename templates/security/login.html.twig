{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Connexion - Phoenix Security{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center vh-100" style="background-color:#eef3ff;">
    <div class="card shadow p-4" style="width:400px; border-radius:12px;">
        <div class="text-center mb-4">
            {# Ic√¥ne/badge s√©curit√© (tu pourras mettre un vrai logo plus tard) #}
            <div class="mb-3" style="font-size:32px; color:#4f46e5;">
                üîí
            </div>

            <h2 class="fw-bold mb-1">Phoenix Security</h2>
            <p class="text-muted mb-0">Syst√®me de gestion des agents</p>
        </div>

        <h5 class="fw-semibold">Connexion</h5>
        <p class="text-muted mb-4" style="font-size:0.9rem;">
            Connectez-vous pour acc√©der au syst√®me de gestion
        </p>

        {# Affichage des erreurs de login #}
        {% if error %}
            <div class="alert alert-danger py-2">
                Identifiants invalides.
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="mb-3">
                <label for="inputEmail" class="form-label">Nom d'utilisateur</label>
                <input
                    type="text"
                    name="_username"
                    id="inputEmail"
                    class="form-control"
                    required
                    autofocus
                    value="{{ last_username }}"
                    placeholder="admin@example.com"
                >
            </div>

            <div class="mb-3">
                <label for="inputPassword" class="form-label">Mot de passe</label>
                <input
                    type="password"
                    name="_password"
                    id="inputPassword"
                    class="form-control"
                    required
                    placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                >
            </div>

            {# Si tu veux la protection CSRF (fortement conseill√©) #}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

            <button class="btn btn-dark w-100 fw-semibold" type="submit">
                Se connecter
            </button>
        </form>
    </div>
</div>
{% endblock %}
