{% extends 'base.html.twig' %}

{% block title %}Site index{% endblock %}

{% block body %}
    <h1>Site index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>City</th>
                <th>ContactName</th>
                <th>ContactPhone</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td>{{ site.id }}</td>
                <td>{{ site.name }}</td>
                <td>{{ site.address }}</td>
                <td>{{ site.city }}</td>
                <td>{{ site.contactName }}</td>
                <td>{{ site.contactPhone }}</td>
                <td>
                    <a href="{{ path('app_site_show', {'id': site.id}) }}">show</a>
                    <a href="{{ path('app_site_edit', {'id': site.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_site_new') }}">Create new</a>
{% endblock %}
